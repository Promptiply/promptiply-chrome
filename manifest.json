{
  "manifest_version": 3,
  "name": "promptiply",
  "version": "0.2.0",
  "description": "promptiply refines prompts inline on ChatGPT and Claude using profiles and API/WebUI modes.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "commands"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://www.chatgpt.com/*",
    "https://claude.ai/*",
    "https://api.anthropic.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://www.chatgpt.com/*",
        "https://claude.ai/*"
      ],
      "js": [
        "content/injector.js"
      ],
      "css": [
        "content/ui/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "promptiply"
  },
  "options_page": "options/index.html",
  "commands": {
    "refine": { "suggested_key": { "default": "Alt+T", "mac": "MacCtrl+T" }, "description": "Refine current prompt" },
    "switch-profile": { "suggested_key": { "default": "Alt+Shift+P" }, "description": "Switch profile" }
  }
}
